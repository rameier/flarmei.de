---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { categories } from "../content/meta/categories";
import type { Post } from "../lib/posts";

type Props = CollectionEntry<"posts">["data"] & {
  relatedPosts?: Post[];
};

const {
  title,
  excerpt,
  date,
  updated,
  coverImage,
  tags,
  category,
  relatedPosts = [],
} = Astro.props;
---

<html lang="de">
  <head>
    <BaseHead title={title} description={excerpt} />
    <style>
      /* 1. Global Layout */
      main {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      article {
        max-width: 720px; /* Begrenzte Breite für Lesbarkeit */
        margin: 0 auto;
        padding: 4rem 0;
      }

      /* 3. Back Navigation */
      .back-nav {
        margin-bottom: 3rem;
      }
      .back-link {
        text-decoration: none;
        color: var(--gray);
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: color 0.2s;
        font-family: "Atkinson", sans-serif;
      }
      .back-link:hover {
        color: var(--accent);
      }

      /* 4. Article Header */
      .article-header {
        margin-bottom: 4rem;
        text-align: left;
      }
      .badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background-color: var(--gray-light);
        color: var(--gray-dark);
        border-radius: 999px;
        font-size: 0.8rem;
        font-weight: 500;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-family: "Atkinson", sans-serif;
      }
      .title {
        font-size: 3.5rem;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        font-family: "Georgia", serif;
        color: rgb(var(--black));
      }
      .intro {
        font-size: 1.25rem;
        line-height: 1.6;
        color: var(--gray-dark);
        margin-bottom: 2rem;
        font-family: "Atkinson", sans-serif;
      }
      .meta {
        display: flex;
        gap: 2rem;
        font-size: 0.9rem;
        color: var(--gray);
        border-top: 1px solid var(--gray-light);
        padding-top: 1.5rem;
        font-family: "Atkinson", sans-serif;
      }

      /* 5. Article Content */
      .prose {
        font-size: 1.125rem;
        line-height: 1.8;
        color: var(--text-main);
        margin-bottom: 4rem;
        font-family: "Atkinson", sans-serif;
      }
      /* Styles for content inside prose */
      .prose :global(h2),
      .prose :global(h3) {
        font-family: "Georgia", serif;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
      }
      .prose :global(p) {
        margin-bottom: 1.5rem;
      }
      .prose :global(ul) {
        padding-left: 1.5rem;
        margin-bottom: 1.5rem;
      }
      .prose :global(li) {
        margin-bottom: 0.5rem;
      }

      /* 6. Share Area */
      .share-section {
        background-color: #fff;
        border-radius: 12px;
        padding: 2rem;
        margin-top: 4rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: var(--box-shadow);
      }
      .share-label {
        font-weight: bold;
        color: var(--gray-dark);
        font-family: "Atkinson", sans-serif;
      }
      .share-icons {
        display: flex;
        gap: 1rem;
      }
      .share-icon {
        color: var(--gray);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s;
      }
      .share-icon:hover {
        color: var(--accent);
      }

      /* 7. More Articles */
      .more-articles {
        margin-top: 6rem;
        padding-top: 4rem;
        border-top: 1px solid var(--gray-light);
      }
      .more-articles h2 {
        font-size: 2rem;
        margin-bottom: 2rem;
        font-family: "Georgia", serif;
      }
      .articles-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
      }
      .article-card {
        background: #fff;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        transition:
          transform 0.2s,
          box-shadow 0.2s;
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        height: 100%;
        border: 1px solid var(--gray-light);
      }
      .article-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--box-shadow);
      }
      .card-badge {
        font-size: 0.75rem;
        color: var(--accent);
        text-transform: uppercase;
        margin-bottom: 0.75rem;
        display: block;
        font-weight: bold;
        font-family: "Atkinson", sans-serif;
      }
      .card-title {
        font-size: 1.25rem;
        font-family: "Georgia", serif;
        margin: 0;
        line-height: 1.3;
        color: var(--black);
      }

      @media (max-width: 768px) {
        .title {
          font-size: 2.5rem;
        }
        .meta {
          flex-direction: column;
          gap: 0.5rem;
        }
        .share-section {
          flex-direction: column;
          gap: 1rem;
          align-items: flex-start;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <!-- 3. Back Navigation -->
        <nav class="back-nav">
          <a href="/blog" class="back-link">← Zurück zur Übersicht</a>
        </nav>

        <!-- 4. Article Header -->
        <header class="article-header">
          <span class="badge">{categories[category]}</span>
          <h1 class="title">{title}</h1>
          {excerpt && <p class="intro">{excerpt}</p>}
          <div class="meta">
            <FormattedDate date={date} />
            {
              updated && (
                <span>
                  (Aktualisiert: <FormattedDate date={updated} />)
                </span>
              )
            }
          </div>
        </header>

        <!-- 5. Article Content -->
        <div class="prose">
          <slot />
        </div>

        <!-- 6. Share Area -->
        <div class="share-section">
          <span class="share-label">Artikel teilen</span>
          <div class="share-icons">
            <a href="#" class="share-icon">Twitter</a>
            <a href="#" class="share-icon">LinkedIn</a>
            <a href="#" class="share-icon">Email</a>
          </div>
        </div>
      </article>

      <!-- 7. More Articles -->
      {
        relatedPosts.length > 0 && (
          <section class="more-articles">
            <h2>Weitere Artikel</h2>
            <div class="articles-grid">
              {relatedPosts.map((post) => (
                <a
                  href={`/blog/${post.data.slug || post.id}/`}
                  class="article-card"
                >
                  <span class="card-badge">
                    {categories[post.data.category]}
                  </span>
                  <h3 class="card-title">{post.data.title}</h3>
                </a>
              ))}
            </div>
          </section>
        )
      }
    </main>
    <Footer />
  </body>
</html>
