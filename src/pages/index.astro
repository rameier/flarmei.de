---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";
import profileImage from "../assets/flarmeiLogo.png";

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<!doctype html>
<html lang="de">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <!-- Hero Section -->
      <section class="hero-section">
        <span class="hero-eyebrow">Willkommen</span>
        <h1 class="hero-headline">
          Technologie, Organisation &<br />Persönliche Entwicklung
        </h1>
        <p class="hero-text">
          Der persönliche Blog und die digitale Visitenkarte von Ralf Meier. Ein
          Raum für Reflexion, Wissenssammlung und professionellen Austausch.
        </p>
        <div class="button-group">
          <a href="/blog" class="btn btn-primary">Zum Blog</a>
          <a href="/about" class="btn btn-secondary">Über mich</a>
        </div>
      </section>

      <!-- Topics Section -->
      <section class="topics-section">
        <h2 style="text-align: center;">Themenschwerpunkte</h2>
        <div class="grid-container">
          <div class="card">
            <span class="card-icon">
              <svg
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <line x1="6" y1="11" x2="10" y2="11"></line>
                <line x1="8" y1="9" x2="8" y2="13"></line>
                <line x1="15" y1="12" x2="15.01" y2="12"></line>
                <line x1="18" y1="10" x2="18.01" y2="10"></line>
                <path
                  d="M17.32 5H6.68a4 4 0 0 0-3.978 3.59c-.006.052-.01.101-.017.152C2.604 9.416 2 14.456 2 16a3 3 0 0 0 3 3c1 0 1.5-.5 2-1l1.414-1.414A2 2 0 0 1 9.828 16h4.344a2 2 0 0 1 1.414.586L17 18c.5.5 1 1 2 1a3 3 0 0 0 3-3c0-1.545-.604-6.584-.685-7.258-.007-.05-.011-.1-.017-.151A4 4 0 0 0 17.32 5z"
                ></path>
              </svg>
            </span>
            <h3>eSports Management</h3>
            <p>
              Strukturen, Ehrenamt, Organisation und Strategie im Vereinswesen.
            </p>
          </div>
          <div class="card">
            <span class="card-icon">
              <svg
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"
                ></path>
                <path d="M12 16v-4"></path>
                <path d="M12 8h.01"></path>
                <path d="M8 12h8"></path>
              </svg>
            </span>
            <h3>Personalentwicklung</h3>
            <p>Lernen im Job, Rollenwechsel und Feedback-Kultur.</p>
          </div>
          <div class="card">
            <span class="card-icon">
              <svg
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M9.5 2A2.5 2.5 0 0 1 12 4.5v15a2.5 2.5 0 0 1-4.96.44 2.5 2.5 0 0 1-2.96-3.08 3 3 0 0 1-.34-5.58 2.5 2.5 0 0 1 1.32-4.24 2.5 2.5 0 0 1 1.98-3A2.5 2.5 0 0 1 9.5 2Z"
                ></path>
                <path
                  d="M14.5 2A2.5 2.5 0 0 0 12 4.5v15a2.5 2.5 0 0 0 4.96.44 2.5 2.5 0 0 0 2.96-3.08 3 3 0 0 0 .34-5.58 2.5 2.5 0 0 0-1.32-4.24 2.5 2.5 0 0 0-1.98-3A2.5 2.5 0 0 0 14.5 2Z"
                ></path>
              </svg>
            </span>
            <h3>Selbstführung</h3>
            <p>Motivation, Prioritäten und Routinen für den Alltag.</p>
          </div>
          <div class="card">
            <span class="card-icon">
              <svg
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <polyline points="16 18 22 12 16 6"></polyline>
                <polyline points="8 6 2 12 8 18"></polyline>
              </svg>
            </span>
            <h3>Softwareentwicklung</h3>
            <p>Frontend-Engineering, Tooling und Developer Experience.</p>
          </div>
          <div class="card">
            <span class="card-icon">
              <svg
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <rect x="3" y="11" width="18" height="10" rx="2"></rect>
                <circle cx="12" cy="5" r="2"></circle>
                <path d="M12 7v4"></path>
                <line x1="8" y1="16" x2="8.01" y2="16"></line>
                <line x1="16" y1="16" x2="16.01" y2="16"></line>
              </svg>
            </span>
            <h3>Künstliche Intelligenz</h3>
            <p>Einsatz von KI im Alltag und in der Softwareentwicklung.</p>
          </div>
          <div class="card">
            <span class="card-icon">
              <svg
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <rect x="3" y="3" width="18" height="18" rx="2"></rect>
                <path d="M9 17c2 0 2.8-1 2.8-2.8V10c0-2 1-3.3 2.8-3.3h1.8"
                ></path>
                <path d="M9 7h6"></path>
              </svg>
            </span>
            <h3>Product Management</h3>
            <p>Produktdenken, Nutzerzentrierung und Organisation.</p>
          </div>
        </div>
      </section>

      <!-- Blog Overview Section -->
      <section class="blog-section">
        <div
          style="display: flex; justify-content: space-between; align-items: baseline; margin-bottom: 2rem;"
        >
          <h2>Neueste Artikel</h2>
          <a href="/blog">Alle Artikel ansehen &rarr;</a>
        </div>
        <div class="blog-grid">
          {
            posts.map((post) => (
              <a href={`/blog/${post.slug}/`} class="blog-card">
                <h3>{post.data.title}</h3>
                <div class="date">
                  <FormattedDate date={post.data.pubDate} />
                </div>
                <p>{post.data.description}</p>
              </a>
            ))
          }
        </div>
      </section>

      <!-- About Section -->
      <section class="about-section">
        <Image
          src={profileImage}
          alt="Portrait von Ralf Meier"
          width={375}
          height={375}
        />
        <div>
          <h2>Über mich</h2>
          <p>
            <strong>flarmei.de</strong> ist mehr als nur ein Blog. Es ist mein digitaler
            Garten, in dem ich Gedanken zu Technologie, Management und persönlichem
            Wachstum kultiviere.
          </p>
          <p>
            Dieser Ort dient als Reflexionsraum und Wissenssammlung. Hier teile
            ich meine Erfahrungen aus der Softwareentwicklung, dem
            Produktmanagement und meiner ehrenamtlichen Arbeit im eSports.
          </p>
          <a href="/about" class="btn btn-secondary" style="margin-top: 1rem;"
            >Mehr erfahren</a
          >
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
