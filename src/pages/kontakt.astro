---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const SITE_TITLE = "Kontakt | Ralf Meier";
const SITE_DESCRIPTION = "Kontaktieren Sie Ralf Meier";
---

<!doctype html>
<html lang="de">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      section {
        padding: 4rem 0;
        margin-bottom: 2rem;
      }
      .content {
        max-width: 720px;
        margin: 0 auto;
      }
      .cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
      }
      .card {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        text-align: center;
        transition:
          transform 0.2s ease,
          box-shadow 0.2s ease;
        text-decoration: none;
        color: var(--text-main);
        border: 1px solid var(--gray-light);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        border-color: var(--accent);
      }
      .card h3 {
        margin: 0;
        font-size: 1.2rem;
        color: var(--gray-dark);
      }
      .card span {
        font-size: 0.9rem;
        color: var(--gray);
        margin-top: 0.5rem;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <div class="content">
          <h1>Kontakt</h1>
          <p>
            Haben Sie Fragen, Anregungen oder Interesse an einer Zusammenarbeit?
            Ich freue mich auf Ihre Nachricht über einen der folgenden Kanäle.
          </p>

          <div class="cards">
            <a href="mailto:mail@flarmei.de" class="card">
              <h3>Email</h3>
              <span>mail@flarmei.de</span>
            </a>
            <a
              href="https://linkedin.com/in/ralf-meier"
              target="_blank"
              rel="noopener noreferrer"
              class="card"
            >
              <h3>LinkedIn</h3>
              <span>Vernetzen & Austausch</span>
            </a>
            <a
              href="https://github.com/flarmei"
              target="_blank"
              rel="noopener noreferrer"
              class="card"
            >
              <h3>GitHub</h3>
              <span>Code & Projekte</span>
            </a>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
