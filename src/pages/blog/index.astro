---
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const tags = [...new Set(posts.flatMap((post) => post.data.tags || []))].sort();
---

<!doctype html>
<html lang="de">
  <head>
    <BaseHead title={`Blog | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      /* Hero Section */
      .blog-hero {
        padding: 4rem 0 2rem 0;
        text-align: left;
      }
      .eyebrow {
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: rgb(var(--gray));
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 700;
      }
      .blog-hero h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
        line-height: 1.1;
      }
      .intro-text {
        font-size: 1.25rem;
        color: rgb(var(--gray-dark));
        max-width: 60ch;
        line-height: 1.5;
      }

      /* Filter Bar */
      .filter-bar {
        display: flex;
        gap: 0.75rem;
        overflow-x: auto;
        padding-bottom: 2rem;
        margin-bottom: 2rem;
        scrollbar-width: none; /* Firefox */
      }
      .filter-bar::-webkit-scrollbar {
        display: none; /* Chrome/Safari */
      }
      .filter-btn {
        background: transparent;
        border: 1px solid rgba(var(--gray), 0.3);
        border-radius: 2rem;
        padding: 0.5rem 1.25rem;
        font-size: 0.9rem;
        color: rgb(var(--gray-dark));
        cursor: pointer;
        white-space: nowrap;
        transition: all 0.2s ease;
        font-family: var(--font-body);
      }
      .filter-btn:hover {
        border-color: rgb(var(--accent));
        color: rgb(var(--accent));
      }
      .filter-btn.active {
        background: rgb(var(--accent));
        color: white;
        border-color: rgb(var(--accent));
      }

      /* Blog List */
      ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }

      .blog-card {
        background: white;
        border-radius: 16px;
        transition:
          transform 0.2s ease,
          box-shadow 0.2s ease;
        border: 1px solid rgba(var(--gray-light), 1);
      }

      .blog-card:hover {
        transform: translateY(-2px);
        box-shadow: var(--box-shadow);
      }

      .blog-card a {
        display: block;
        text-decoration: none;
        padding: 2rem;
        color: inherit;
      }

      .badge {
        display: inline-block;
        font-size: 0.75rem;
        font-weight: 700;
        color: rgb(var(--accent));
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.75rem;
      }

      .title {
        font-size: 1.75rem;
        margin: 0 0 0.75rem 0;
        color: rgb(var(--black));
        font-family: "Georgia", serif;
      }

      .description {
        margin: 0 0 1.5rem 0;
        color: rgb(var(--gray-dark));
        line-height: 1.6;
      }

      .meta {
        font-size: 0.875rem;
        color: rgb(var(--gray));
        font-family: sans-serif;
      }

      @media (max-width: 720px) {
        .blog-hero h1 {
          font-size: 2.5rem;
        }
        .blog-card a {
          padding: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section class="blog-hero">
        <span class="eyebrow">Blog</span>
        <h1>Gedanken & Einblicke</h1>
        <p class="intro-text">
          Artikel über Softwareentwicklung, Produktmanagement und persönliche
          Erfahrungen.
        </p>
      </section>

      <nav class="filter-bar">
        <button class="filter-btn active">Alle</button>
        {tags.map((tag) => <button class="filter-btn">{tag}</button>)}
      </nav>

      <section>
        <ul>
          {
            posts.map((post) => (
              <li class="blog-card">
                <a href={`/blog/${post.id}/`}>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <span class="badge">{post.data.tags[0]}</span>
                  )}
                  <h2 class="title">{post.data.title}</h2>
                  <p class="description">{post.data.description}</p>
                  <div class="meta">
                    <FormattedDate date={post.data.pubDate} />
                  </div>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
