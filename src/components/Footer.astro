  .footer-column h3 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: var(--black);
  }
  .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .footer-column ul li {
    margin-bottom: 0.5rem;
  }
  .footer-column a {
    color: rgb(var(--gray-dark));
    text-decoration: none;
  }
  .footer-column a:hover {
    color: var(--accent);
  }
  .social-links {
    display: flex;
    gap: 1rem;
  }
  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    font-size: 0.9rem;
    color: rgb(var(--gray));
  }
